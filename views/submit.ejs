<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Submit Your Recipe</h1>
    <div class="col-lg-6 mx-auto">
        <div class="lead">Share your amazing recipies with thousands of web developers accross the world. Fill our form
            to get started.</div>
    </div>
</div>

<div class="row justify-content-center">

    <% if (infoSubmitObj!='' ) { %>
        <div class="col-8 alert alert-info" role="alert">
            <%- infoSubmitObj %>
        </div>
        <% } %>
            <% if (infoErrorsObj!='' ) { %>
                <div class="col-8 alert alert-danger" role="alert">
                    <%- infoErrorsObj[0].message %>
                </div>
                <% } %>


                    <div class="col-8">
                        <form action="/submit-recipe" enctype="multipart/form-data" method="POST">
                            <div class="mb-3">
                                <label for="Email" class="form-label fw-bold">Email</label>
                                <input type="email" required name="email" class="form-control" id="Email">
                                <div id="emailHelp" class="form-text">We'll never share your email with anyone else.
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="Rceipe-Name" class="form-label fw-bold">Recipe Name</label>
                                <input type="text" required name="name" class="form-control" id="Rceipe-Name">
                            </div>
                            <div class="mb-3">
                                <label for="description" class="form-label fw-bold">Description</label>
                                <textarea required class="form-control" name="description" id="description"
                                    rows="3"></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="name" class="form-label fw-bold">Ingredients</label><br>
                                <small>Example: Ice</small>
                                <div class="ingredientList">
                                    <div class="ingredientDiv mb-1 input-group">
                                        <input type="text" class="form-control" name="ingredients">
                                        <button type="button" onclick="this.parentNode.remove()"
                                            class="btn btn-outline-dark input-group-button"
                                            id="removeIngredientsBtn">-</button>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <button type="button" class="btn btn-outline-dark" id="addIngredientsBtn">+
                                    Ingredient</button>
                            </div>

                            <div class="mb-3">
                                <label for="category" class="form-label fw-bold">Category</label>
                                <select class="form-select form-control" required name="category" id="category"
                                    aria-label="Default select example">
                                    <option selected>Select Category</option>
                                    <option value="Thai">Thai</option>
                                    <option value="American">American</option>
                                    <option value="Indian">Indian</option>
                                    <option value="Mexican">Mexican</option>
                                    <option value="Spanish">Spanish</option>
                                    <option value="Chinese">Chinese</option>
                                </select>

                            </div>
                            <div class="mb-3">
                                <label for="formFile" class="form-label">Default file input example</label>
                                <input class="form-control" name="image" type="file" id="formFile">
                            </div>



                            <button type="submit" class="btn btn-primary btn-dark">Submit Recipe</button>
                        </form>
                    </div>
</div>